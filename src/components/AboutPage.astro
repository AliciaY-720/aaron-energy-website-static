---
import ProgressBar from "./ProgressBar.astro";

export interface ProgressItem {
  label: string;
  value: number;
}

export interface Props {
  image?: string;
  imageAlt?: string;
  title?: string;
  paragraphs?: string[];
  progress?: ProgressItem[];
}

const {
  image = "/img/about.jpg",
  imageAlt = "Aaron Energy Services – Electrical, Gas, Hydronic, Mechanical",

  title = "About Aaron Energy Services",

  paragraphs = [
    "Aaron Energy Services is a family-owned contractor providing electrical, natural gas, hydronic, and mechanical services across the Greater Toronto Area. Since 2009, we have supported residential, commercial, and industrial projects with a safety-first, code-compliant approach, delivering systems that are dependable, efficient, and built for long-term use.",
    "We focus on clean installations, reliable system performance, and clear coordination across trades. Our work includes electrical service upgrades, equipment connections and integration, backup generator support, natural gas piping and connections, hydronic heating and snow melting systems, and mechanical (heating, cooling, and ventilation) installations. From planning and installation to troubleshooting and repairs, we aim to deliver inspection-ready results with attention to workmanship, safety, and long-term serviceability.",
  ],

  // Use these as capability highlights (not KPIs).
  progress = [
    { label: "Safety-first, code-compliant workmanship", value: 100 },
    { label: "Residential • Commercial • Industrial coverage", value: 100 },
    { label: "Electrical • Gas • Hydronic • Mechanical systems", value: 100 },
  ],
} = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
          loading="lazy"
        />
      </div>

      <!-- CONTENT -->
      <div>
        <h1 class="font-display text-4xl md:text-5xl text-dark mb-6">
          {title}
        </h1>

        {paragraphs.map((p) => (
          <p class="text-lg text-steel-gray mb-6">{p}</p>
        ))}

        <!-- HIGHLIGHTS GRID -->
        {progress?.length ? (
          <div class="grid grid-cols-1 gap-4">
            {progress.map((item) => (
              <ProgressBar
                label={item.label}
                value={item.value}
                showValue={false}
              />
            ))}
          </div>
        ) : null}
      </div>
    </div>
  </div>
</section>
