---
import ProgressBar from "./ProgressBar.astro";

export interface ProgressItem {
  label: string;
  value: number;
}

export interface Props {
  image?: string;
  imageAlt?: string;
  title?: string;
  paragraphs?: string[];
  progress?: ProgressItem[];
}

const {
  image = "/img/about.jpg",
  imageAlt = "Constructors Team & Fleet",

  title = "About Aaron Energy Services",

  paragraphs = [
    "Aaron Energy Services is a family-owned provider of reliable electrical, mechanical, natural gas, and hydronic heating solutions across the Greater Toronto Area. Since 2009, we have delivered safe, dependable systems and professional service to residential, commercial, and industrial clients.",
    "With hands-on experience across residential developments, commercial buildings, and industrial facilities, we focus on quality workmanship, code compliance, and long-term system performance. Safety, efficiency, and clear communication are at the core of every project we undertake.",
  ],

  progress = [
    { label: "Safety Compliance Rate", value: 97 },
    { label: "Client Satisfaction Score", value: 96 },
  ],
} = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
        />
      </div>

      <!-- CONTENT -->
      <div>
        <h1 class="font-display text-4xl md:text-5xl text-dark mb-6">
          {title}
        </h1>
        {paragraphs.map((p) => (
          <p class="text-lg text-steel-gray mb-6">{p}</p>
        ))}

        <!-- PROGRESS GRID -->
        <div class="grid grid-cols-1 gap-4">
          {progress.map((item) => (
            <ProgressBar label={item.label} value={item.value} />
          ))}
        </div>
      </div>
    </div>
  </div>
</section>