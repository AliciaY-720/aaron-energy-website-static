---
export interface AboutStat {
  number: number;
  suffix?: string;
  label: string;
}

export interface Props {
  image?: string;
  imageAlt?: string;
  badgeText?: string;
  title?: string;
  paragraphs?: string[];
  stats?: AboutStat[];
}

const {
  image = "/img/about.jpg",
  imageAlt = "Constructors Team & Fleet",

  badgeText = "About Us",

  title = "15+ YEARS OF EXCELLENCE",

  paragraphs = [
    "At Aaron Energy Services, we are more than a family-owned businessâ€”we are a trusted service provider with a proven track record since 2009. Originally established as an electrical contractor, we have grown to offer a comprehensive range of services, including electrical, mechanical, heating and cooling, natural gas, and hydronic heating systems.",
    "We take a practical, hands-on approach to every project, focusing on safe installations, efficient system design, and long-term reliability. Safety, efficiency, and quality are at the core of everything we do, from initial planning through final commissioning. Our commitment to dependable workmanship, code compliance, and clear communication has earned the trust of residential, commercial, and industrial clients throughout the Greater Toronto Area (GTA).",
  ],

} = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
        />
      </div>
      <!-- CONTENT -->
      <div>
        <!-- BADGE -->
        <div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
          {badgeText}
        </div>

        <!-- TITLE -->
        <h2 class="font-display text-4xl md:text-5xl text-dark mb-6">
          {title}
        </h2>

        <!-- PARAGRAPHS -->
        <div class="post-content text-lg text-steel-gray space-y-4 mb-8">
          {paragraphs.map((p) => <p>{p}</p>)}
        </div>
      </div>
    </div>
  </div>
</section>