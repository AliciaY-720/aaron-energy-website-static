---
export interface Props {
  src?: string;
  alt?: string;
  width?: string;
  href?: string;
  class?: string;
}

const {
  src = "/img/logo.png",
  alt = "Logo",
  href = "/",
  width = "max-w-56",
  class: extraClass = "",
} = Astro.props;
---

<a href={href} class={`inline-block ${extraClass}`}>
  <img src={src} alt={alt} class={width} />
</a>
