---
import { Icon } from "astro-icon/components";
import ContactForm from "./ContactForm.astro";

export interface Props {
  officeTitle?: string;
  officeAddress?: string[];
  phones?: string[];
  emails?: string[];
  mapEmbedUrl?: string;
}

const {
  officeTitle = "Head Office â€“ Toronto",
  officeAddress = [
    "Unit B3, 63 Silver Star Blvd,",
    "Toronto, ON, Canada M1V 5E5",
  ],
  phones = ["+1 (416) 509-7881"],
  emails = ["aaronexcom@yahoo.ca"],
  mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2530.6733163059885!2d-79.29087849999999!3d43.80722639999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4d31f02f206bf%3A0x15b62e0c53ccc87c!2s63%20Silver%20Star%20Blvd%20b3%2C%20Scarborough%2C%20ON%20M1V%205E5!5e1!3m2!1sen!2sca!4v1766162028793!5m2!1sen!2sca",
} = Astro.props;
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- CONTACT INFO -->
      <div>
        <div class="space-y-8">
          <!-- OFFICE -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:geo-alt-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">{officeTitle}</h3>
              <p class="text-steel-gray whitespace-pre-line">
                {officeAddress.join("\n")}
              </p>
            </div>
          </div>

          <!-- PHONE -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:telephone-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Phone</h3>
              <div class="text-steel-gray space-y-1">
                {phones.map((phone) => (
                  <a
                    href={`tel:${phone.replace(/[^+\d]/g, "")}`}
                    class="block hover:text-primary transition-colors"
                  >
                    {phone}
                  </a>
                ))}
              </div>
            </div>
          </div>

          <!-- EMAIL -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:envelope-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Email</h3>
              <div class="text-steel-gray space-y-1">
                {emails.map((email) => (
                  <a
                    href={`mailto:${email}`}
                    class="block hover:text-primary transition-colors"
                  >
                    {email}
                  </a>
                ))}
              </div>
            </div>
          </div>

          <!-- GOOGLE MAPS -->
          <div class="mt-10">
            <iframe
              src={mapEmbedUrl}
              width="100%"
              height="350"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              class="rounded-xl shadow-lg"
            ></iframe>
          </div>
        </div>
      </div>
      <!-- CONTACT FORM -->
      <ContactForm />
    </div>
  </div>
</section>
