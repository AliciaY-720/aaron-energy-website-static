---
import { Icon } from "astro-icon/components";
import ContactForm from "./ContactForm.astro";

export interface Props {
  officeTitle?: string;
  officeAddress?: string[];
  phones?: string[];
  emails?: string[];
  mapEmbedUrl?: string;
  officeMapLink?: string;
}

const {
  officeMapLink = "https://maps.app.goo.gl/dp2dRifFkLHre4Sz7",
  officeTitle = "Head Office – Toronto",
  officeAddress = [
    "Unit B3, 63 Silver Star Blvd, Toronto, ON, Canada M1V 5E5",
  ],
  phones = ["+1 (416) 509-7881"],
  emails = ["aaronexcom@yahoo.ca"],
  mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d557.9096515970145!2d-79.29169512588872!3d43.807036208803446!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4d3e210400001%3A0x5af8bbd2facb1382!2s63%20Silver%20Star%20Blvd%20UNIT%20B2%2C%20Scarborough%2C%20ON%20M1V%205E5!5e0!3m2!1sen!2sca!4v1767231656750!5m2!1sen!2sca",
} = Astro.props;
---
<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- CONTACT INFO -->
      <div>
        <div class="space-y-8">


          <!-- PHONE -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:telephone-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Phone</h3>
              <div class="text-steel-gray space-y-1">
                {phones.map((phone) => (
                  <a
                    href={`tel:${phone.replace(/[^+\d]/g, "")}`}
                    class="block hover:text-primary transition-colors"
                  >
                    {phone}
                  </a>
                ))}
              </div>
            </div>
          </div>

          <!-- EMAIL -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:envelope-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Email</h3>
              <div class="text-steel-gray space-y-1">
                {emails.map((email) => (
                  <a
                    href={`mailto:${email}`}
                    class="block hover:text-primary transition-colors"
                  >
                    {email}
                  </a>
                ))}
              </div>
            </div>
          </div>

        <!-- WECHAT -->
        <div class="flex gap-6">
          <!-- icon -->
          <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
            <Icon name="bi:wechat" class="text-3xl text-primary" />
          </div>

          <div>
            <h3 class="text-2xl font-bold mb-2">WeChat 微信</h3>

            <div class="mt-5">
              <img
                src="/img/wechatQR.jpg"
                alt="WeChat QR Code"
                class="w-40 h-40 rounded-md border border-gray-200"
              />
            </div>
          </div>
        </div>


        </div>
      </div>
                
      <div>      
          <!-- OFFICE -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:geo-alt-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">{officeTitle}</h3>
                <a
                  href={officeMapLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-steel-gray whitespace-pre-line hover:text-primary transition-colors inline-flex items-start gap-1"
                >
                  <span>{officeAddress.join("\n")}</span>
                  <Icon name="bi:box-arrow-up-right" class="mt-1 text-sm opacity-70" />
                </a>

            </div>
          </div>
          <!-- GOOGLE MAPS -->

          <div class="mt-10">
            <iframe
              src={mapEmbedUrl}
              width="95%"
              height="320"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              class="rounded-xl shadow-lg"
            ></iframe>
          </div>
        </div>
      <!-- CONTACT FORM -->
      <!-- <ContactForm /> -->
    </div>
  </div>
</section>
