---
import { Icon } from "astro-icon/components";

export interface SocialItem {
  href: string;
  name: string;
  icon: string;
}

export interface LinkItem {
  name: string;
  href: string;
}

export interface CertImage {
  src: string;
  alt: string;
  height?: string;
}

export interface Props {
  logo?: string;
  description?: string;
  socials?: SocialItem[];
  quickLinks?: LinkItem[];
  serviceLinks?: LinkItem[];
  certifications?: CertImage[];
  copyrightName?: string;
  copyrightText?: string;
  year?: number;
}

const {
  logo = "/img/logo-light.png",

  description = "Your trusted partner for electrical and energy services across the GTA.\n\n值得您信赖的电气与能源服务合作伙伴",

  quickLinks = [
    { name: "Documentation", href: "/documentation" },
    { name: "Services", href: "/service" },
    { name: "Equipment", href: "/equipment" },
    { name: "Privacy Policy", href: "/privacy" },
    { name: "Terms of Services", href: "/terms" },
  ],

  serviceLinks = [
    { name: "Electrical", href: "/service/electrical" },
    { name: "Natural Gas", href: "/service/natural-gas" },
    { name: "Operator Supply", href: "/service/operator-services" },
    { name: "Project Consulting", href: "/service/project-consulting" },
    { name: "Maintenance", href: "/service/equipment-maintenance" },
    { name: "Safety Training", href: "/service/safety-training" },
  ],

  certifications = [
    { src: "/img/iso-9001.png", alt: "ISO 9001", height: "h-16" },
    { src: "/img/iso-4500.png", alt: "ISO 4500", height: "h-16" },
    { src: "/img/osha10.png", alt: "OSHA 10", height: "h-12" },
  ],

  copyrightName = "Constructors",
  copyrightText = "All rights reserved.",
  year = new Date().getFullYear(),
} = Astro.props;
---

<footer class="bg-dark-deep relative text-white">
  <div class="h-1 warning-stripes"></div>
  <div class="max-w-7xl mx-auto px-4 relative py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-10">
      <!-- BRAND COLUMN -->
      <div class="lg:col-span-2 lg:pe-12">
        <div class="flex items-center gap-3 mb-4">
          <img src={logo} alt="logo light" class="max-w-56" />
        </div>
        <p class="text-metal-gray mb-6 whitespace-pre-line">{description}</p>
      </div>

      <!-- QUICK LINKS -->
      <div>
        <h3 class="text-xl font-bold mb-6">Quick Links</h3>
        <ul class="space-y-3 text-metal-gray">
          {quickLinks.map((l) => (
            <li>
              <a href={l.href} class="hover:text-primary transition">{l.name}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- SERVICES -->
      <div>
        <h3 class="text-xl font-bold mb-6">Services</h3>
        <ul class="space-y-3 text-metal-gray">
          {serviceLinks.map((s) => (
            <li>
              <a href={s.href} class="hover:text-primary transition">{s.name}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- CERTIFICATIONS -->
      <div>
        <h3 class="text-xl font-bold mb-6">Certifications</h3>
        <div class="flex flex-wrap gap-4">
          {certifications.map((c) => (
            <img src={c.src} alt={c.alt} class={`${c.height} opacity-80`} />
          ))}
        </div>
      </div>
    </div>

    <!-- COPYRIGHT -->
    <div class="border-t border-dark-surface mt-12 pt-8 text-center text-metal-gray">
      <p>
        &copy; {year} {copyrightName} {copyrightText}
      </p>
    </div>
  </div>
</footer>
