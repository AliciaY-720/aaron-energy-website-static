---
export interface StatItem {
  value: string;        // contoh: "99%" atau "24–48h"
  label: string;        // contoh: "Equipment Reliability"
}

export interface Props {
  label?: string;
  title?: string;

  problemTitle?: string;
  problemText?: string;

  solutionTitle?: string;
  solutionText?: string;

  stats?: StatItem[];

  image?: string;
  imageAlt?: string;
}

const {
  label = "INTEGRATED SERVICES",
  title = "Building Systems, Done Right",

  problemTitle = "The Challenge",
  problemText = `
    Building projects often involve multiple trades and overlapping scopes.
    Without clear coordination and code-compliant execution, issues like rework,
    delays, and inspection setbacks can quickly add cost and risk.
  `,

  solutionTitle = "Our Approach",
  solutionText = `
    We deliver coordinated electrical, natural gas, hydronic, and mechanical work
    for residential and commercial projects. Our focus is clean installations,
    safety-first practices, and code-compliant workmanship — so your systems are
    reliable, serviceable, and inspection-ready.
  `,

  // Avoid making up statistics. Use factual, non-numeric “value” statements.
  stats = [
    { value: "GTA", label: "Service Area" },
    { value: "Code", label: "Compliance Focus" },
    { value: "Systems", label: "Integrated Delivery" },
  ],

  // Pick a strong “systems” hero image (you can change this any time)
  image = "/img/electrical/generator2.jpg",
  imageAlt = "Mechanical, electrical, and building systems work",
} = Astro.props;

---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- LEFT CONTENT -->
      <div>
        <!-- LABEL -->
        {label && (
          <div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
            {label}
          </div>
        )}
        <!-- TITLE -->
        {title && (
          <h2 class="font-display text-4xl md:text-5xl text-dark mb-6">
            {title}
          </h2>
        )}
        <!-- PROBLEM -->
        <p class="text-lg text-dark font-semibold mb-2">{problemTitle}</p>
        <p class="text-lg text-steel-gray mb-6">{problemText}</p>
        <!-- SOLUTION -->
        <p class="text-lg text-dark font-semibold mb-2">{solutionTitle}</p>
        <p class="text-lg text-steel-gray mb-8">{solutionText}</p>
        <!-- SUPPORTING STATS -->
        <div class="grid grid-cols-3 gap-8">
          {stats.map((s) => (
            <div>
              <div class="text-4xl font-display text-primary font-bold">{s.value}</div>
              <p class="text-steel-gray">{s.label}</p>
            </div>
          ))}
        </div>
      </div>
      <!-- RIGHT IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
        />
      </div>
    </div>
  </div>
</section>